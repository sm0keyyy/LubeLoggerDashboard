<UserControl x:Class="LubeLoggerDashboard.Views.MaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LubeLoggerDashboard.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel Margin="20">
            <TextBlock Text="Maintenance Records" FontSize="24" Margin="0,0,0,20"/>
            <TextBlock Text="Manage your maintenance records" FontSize="18" Margin="0,0,0,20"/>
            
            <!-- Placeholder for maintenance record types -->
            <TabControl>
                <TabItem Header="Service">
                    <Border Background="#f5f5f5" CornerRadius="5" Padding="15" Margin="0,10,0,10">
                        <StackPanel>
                            <TextBlock Text="Service Records" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="No service records to display." Foreground="#7f8c8d"/>
                            <Button Content="Add Service Record" Margin="0,10,0,0" Padding="10,5" Background="#3498db" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="Repair">
                    <Border Background="#f5f5f5" CornerRadius="5" Padding="15" Margin="0,10,0,10">
                        <StackPanel>
                            <TextBlock Text="Repair Records" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="No repair records to display." Foreground="#7f8c8d"/>
                            <Button Content="Add Repair Record" Margin="0,10,0,0" Padding="10,5" Background="#3498db" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="Upgrade">
                    <Border Background="#f5f5f5" CornerRadius="5" Padding="15" Margin="0,10,0,10">
                        <StackPanel>
                            <TextBlock Text="Upgrade Records" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="No upgrade records to display." Foreground="#7f8c8d"/>
                            <Button Content="Add Upgrade Record" Margin="0,10,0,0" Padding="10,5" Background="#3498db" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</UserControl>