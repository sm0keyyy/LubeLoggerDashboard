<Window x:Class="LubeLoggerDashboard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LubeLoggerDashboard.Views"
        mc:Ignorable="d"
        Title="LubeLogger Dashboard" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="10">
            <TextBlock Text="LubeLogger Dashboard" Foreground="White" FontSize="20" FontWeight="Bold"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border Grid.Column="0" Background="#ecf0f1" BorderBrush="#bdc3c7" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <TextBlock Text="Navigation" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <!-- Login Section -->
                    <Border Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="API Authentication" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="Username:" Margin="0,5,0,2"/>
                            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>
                            <TextBlock Text="Password:" Margin="0,0,0,2"/>
                            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
                            <Button x:Name="LoginButton" Content="Login" Padding="10,5" Background="#3498db" Foreground="White" Click="LoginButton_Click"/>
                            <TextBlock x:Name="LoginStatusText" Margin="0,10,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Future Navigation Items (disabled until logged in) -->
                    <TextBlock Text="Vehicles" Margin="5,10,0,5" Foreground="#7f8c8d"/>
                    <TextBlock Text="Maintenance Records" Margin="5,5,0,5" Foreground="#7f8c8d"/>
                    <TextBlock Text="Reports" Margin="5,5,0,5" Foreground="#7f8c8d"/>
                    <TextBlock Text="Settings" Margin="5,5,0,5" Foreground="#7f8c8d"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1" Background="White">
                <StackPanel Margin="20">
                    <TextBlock Text="Welcome to LubeLogger Dashboard" FontSize="24" Margin="0,0,0,20"/>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="This application connects to your LubeLogger instance to provide a native Windows interface for managing your vehicle maintenance records."/>
                        <LineBreak/>
                        <LineBreak/>
                        <Run Text="To get started, please enter your LubeLogger API credentials in the login panel on the left."/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>